@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Index</h2>
<div id="myKo">
    <input value="Receive Params By API" onclick="reviveParamsByAPI()" type="button" />
</div>
<script src="http://localhost:9000/lib/knockout/knockout-3.4.0.js" type="text/javascript"></script>
<script src="http://localhost:9000/jquery.plugins/jquery.knockout.helper/jquery.knockout.helper2.0.js" type="text/javascript"></script>
<script src="http://localhost:9000/jquery.plugins/jquery.pagination/jquery.pagination.js" type="text/javascript"></script>
<script type="text/javascript">
    function reviveParamsByAPI() {
        var asd = {
            Name: 'asd',
            ID: '3',
            Other: 'qwe'
        };

        $.post('/api/TestAPI/ReceiveParam?index=2', asd, function (result) {
            console.log(result);
        });

        $('#myKo').koHelper({
            url: '/api/TestAPI/ReceiveParam',
            requestType: 'POST',
            requestData: asd,
            validateData: function (result) {
                console.log(result);
            }
        });

        $('#myKo').data("koHelper").reLoadPost({
            url: '/api/TestAPI/ReceiveParam',
            data: asd
        });
    };
</script>